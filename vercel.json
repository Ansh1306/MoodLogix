{
  "version": 2,
  "builds": [
    { "src": "app/**/*", "use": "@vercel/static-build" },
    { "src": "api/*", "use": "@vercel/node" },
    { "src": "pages/api/*", "use": "@vercel/node" },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/app/$1"
    }
  ]
}
